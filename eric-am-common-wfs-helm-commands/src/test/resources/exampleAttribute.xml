<config xmlns="http://tail-f.com/ns/config/1.0">
  <epg xmlns="urn:rdns:com:ericsson:oammodel:ericsson-epg">
    <pgw>
      <node>p4-pcc-1-pgw</node>
      <shared-ip-pool>
        <name>ip-pool-1</name>
        <address>
          <name>24.1.0.0/16</name>
        </address>
        <ipv6-address>
          <name>2001:1b76:2400:40::/58</name>
        </ipv6-address>
        <address-reuse-time>0</address-reuse-time>
      </shared-ip-pool>
      <charging>
        <characteristics>
          <default>0000</default>
          <ignore-profile-from-serving-node/>
          <profile0>
            <no-call-detail/>
          </profile0>
        </characteristics>
      </charging>
      <user-plane>
        <node-name>
          <name>p4-pcg-1</name>
          <pfcp-address>10.81.41.168</pfcp-address>
          <ip-selection-condition>
            <data-network>internet</data-network>
            <selected-shared-ipv6-pool>ip-pool-1</selected-shared-ipv6-pool>
          </ip-selection-condition>
        </node-name>
      </user-plane>
      <user-plane-pool>
        <pool>
          <name>pgw-upf-pool</name>
          <node-name>
            <name>p4-pcg-1</name>
            <weight>1</weight>
          </node-name>
        </pool>
      </user-plane-pool>
      <user-plane-selection>
        <default-pool>pgw-upf-pool</default-pool>
      </user-plane-selection>
      <interface>
        <s5s8-c>
          <logical-interface>pgw-s5s8-c-if</logical-interface>
          <no-path-management/>
          <no-peer-restart/>
        </s5s8-c>
        <sx>
          <logical-interface>sx-b-cp-if</logical-interface>
        </sx>
      </interface>
      <policy-charging-rule-scope>
        <name>pc_ruleScope1</name>
        <policy-control>policy_ruleScope1</policy-control>
        <charging-control>charging_ruleScope1</charging-control>
      </policy-charging-rule-scope>
    </pgw>
    <node>
      <node-type>gw-c</node-type>
      <logical-interface>
        <name>sx-b-cp-if</name>
        <address>10.81.41.138</address>
        <routing-instance>default</routing-instance>
      </logical-interface>
    </node>
  </epg>
  <nacm xmlns="urn:ietf:params:xml:ns:yang:ietf-netconf-acm">
    <groups>
      <group>
        <name>ericsson-support</name>
        <user-name>erv</user-name>
      </group>
    </groups>
  </nacm>
</config>